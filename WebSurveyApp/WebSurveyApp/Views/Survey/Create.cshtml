@model WebSurveyApp.SurveyBindingModel

@{ ViewBag.Title = "Create Survey"; }

<div class="container-edit">
    <h2>Create survey</h2>
    <form asp-action="Create" method="Post">
        <p>
            <input asp-for="Title" placeholder="Type your Survey Title" />
        </p>
        <p>
            <span asp-validation-for="Title"></span>
        </p>
        <p>
            <button class="btn-color-green" type="submit">Create</button>
        </p>
    </form>
</div>